/*
 * Example devicetree overlay for nRF52840 DK
 *
 * This configures UART1 to communicate with the Argos SMD module.
 * Adjust pin assignments and UART instance as needed for your hardware.
 */

&pinctrl {
	uart1_default: uart1_default {
		group1 {
			psels = <NRF_PSEL(UART_TX, 0, 6)>,  /* P0.06 */
			        <NRF_PSEL(UART_RX, 0, 8)>;  /* P0.08 */
		};
	};

	uart1_sleep: uart1_sleep {
		group1 {
			psels = <NRF_PSEL(UART_TX, 0, 6)>,
			        <NRF_PSEL(UART_RX, 0, 8)>;
			low-power-enable;
		};
	};

	/*
	 * Optional: Hardware flow control configuration
	 * Uncomment if your Argos SMD module uses RTS/CTS
	 */
	/*
	uart1_default: uart1_default {
		group1 {
			psels = <NRF_PSEL(UART_TX, 0, 6)>,
			        <NRF_PSEL(UART_RX, 0, 8)>,
			        <NRF_PSEL(UART_RTS, 0, 5)>,
			        <NRF_PSEL(UART_CTS, 0, 7)>;
		};
	};

	uart1_sleep: uart1_sleep {
		group1 {
			psels = <NRF_PSEL(UART_TX, 0, 6)>,
			        <NRF_PSEL(UART_RX, 0, 8)>,
			        <NRF_PSEL(UART_RTS, 0, 5)>,
			        <NRF_PSEL(UART_CTS, 0, 7)>;
			low-power-enable;
		};
	};
	*/
};

&uart1 {
	status = "okay";
	current-speed = <9600>;
	pinctrl-0 = <&uart1_default>;
	pinctrl-1 = <&uart1_sleep>;
	pinctrl-names = "default", "sleep";

	argossmd: argossmd {
		compatible = "arribada,argossmd";
		label = "ARGOSSMD";
		/*
		 * Optional: wakeup GPIO for low power mode
		 * Uncomment and adjust if your Argos SMD module
		 * requires a wakeup signal
		 */
		/* wakeup-gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>; */
	};
};
