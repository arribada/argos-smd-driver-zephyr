{
	"name": "Zephyr",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "../"
	},
	"remoteUser": "user",
	"onCreateCommand": "bash -c 'west update'",
	"postStartCommand": "bash",
	"customizations": {
		"vscode": {
			"extensions": [
				"twxs.cmake",
				"llvm-vs-code-extensions.vscode-clangd",
				"nordic-semiconductor.nrf-kconfig",
				"nordic-semiconductor.nrf-terminal",
				"nordic-semiconductor.nrf-devicetree"
			],
      "settings": {
          "terminal.integrated.defaultProfile.linux": "bash",
          "terminal.integrated.profiles.linux": { "bash": { "path": "/bin/bash" } }
      }
		}
	},
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/user/west-workspace/argos-smd-driver-zephyr,type=bind", 
    "workspaceFolder": "/home/user/west-workspace/argos-smd-driver-zephyr",
    "runArgs": [
    	"--privileged",
    	"-v", "/dev:/dev",
		"--group-add=27"
    ],
    "mounts" : [
        {
            "source": "${localEnv:HOME}/.ssh",
            "target": "/home/user/.ssh",
            "type": "bind"
        }
    ]
}    
