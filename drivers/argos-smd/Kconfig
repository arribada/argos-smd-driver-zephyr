config ARGOS_SMD
    bool "Enable argos smd peripheral"
    depends on UART_INTERRUPT_DRIVEN

if ARGOS_SMD
    module = ARGOS_SMD
    module-str = Argos Smd
    source "subsys/logging/Kconfig.template.log_config"

config ARGOS_DFU
    bool "Enable Argos SMD Device Firmware Update (DFU) support via UART"
    depends on ARGOS_SMD
    help
      Enable Device Firmware Update (DFU) support for Argos SMD modules.
      This provides an API to perform over-the-air (OTA) firmware updates
      via UART using AT commands. The DFU process includes entering
      bootloader mode, transferring firmware chunks, and verifying CRC32.

if ARGOS_DFU
    module = ARGOS_DFU
    module-str = Argos DFU
    source "subsys/logging/Kconfig.template.log_config"
endif

endif

# Kineis SPI Driver (alternative to UART)
config KINEIS_SPI
    bool "Enable Kineis SPI driver"
    depends on SPI
    help
      Enable SPI interface driver for Kineis (Argos) modules.
      Uses Protocol A+ framing with magic bytes, sequence numbers,
      and CRC-8 CCITT checksums.

if KINEIS_SPI
    module = KINEIS_SPI
    module-str = Kineis SPI
    source "subsys/logging/Kconfig.template.log_config"

config KINEIS_SPI_INIT_PRIORITY
    int "Kineis SPI driver init priority"
    default 60
    help
      Initialization priority for Kineis SPI driver.

config KINEIS_DFU_SPI
    bool "Enable Kineis DFU via SPI"
    depends on KINEIS_SPI
    help
      Enable Device Firmware Update (DFU) support for Kineis modules via SPI.
      This provides bootloader communication using DFU commands (0x30-0x3F)
      including flash erase, write, verify, and jump to application.

      DFU Sequence:
      1. Enter bootloader (CMD_DFU_ENTER 0x3F)
      2. Ping bootloader (DFU_PING 0x30)
      3. Erase flash (DFU_ERASE 0x32)
      4. Write chunks (DFU_WRITE_REQ + DFU_WRITE_DATA)
      5. Verify CRC (DFU_VERIFY 0x37)
      6. Jump to app (DFU_JUMP 0x39)

if KINEIS_DFU_SPI
    module = KINEIS_DFU
    module-str = Kineis DFU SPI
    source "subsys/logging/Kconfig.template.log_config"
endif

endif